{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "title": "Widget definition",
  "description": "",
  "properties": {
    "params": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "./params/TextItem.json"
          },
          {
            "$ref": "./params/IntegerItem.json"
          }
        ]
      }
    },
    "input": {
      "type": "array",
      "items": {
        "title": "WidgetInput",
        "type": "object",
        "properties": {
          "datasource": {
            "$ref": "./inputs/datasource.json"
          },
          "parser": {
            "$ref": "./transformers/parsers.json"
          },
          "transformers": {
            "$ref": "./transformers/transformers.json"
          }
        },
        "additionalProperties": false,
        "required": ["datasource", "parser"]
      }
    },
    "visualization": {
      "$ref": "./visualizations/chartjs.json"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}