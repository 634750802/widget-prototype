{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "title": "ApiInput",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["api"]
    },
    "method": {
      "type": "string",
      "description": "HTTP method to call API. Defaults to 'GET'",
      "enum": ["GET", "POST"]
    },
    "url": {
      "type": "string",
      "description": "HTTP url of the API."
    },
    "params": {
      "type": "object",
      "properties": {
        "url": {
          "$ref": "#/definitions/Params"
        },
        "header": {
          "$ref": "#/definitions/Params"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["type", "method", "url"],
  "definitions": {
    "ParamValue": {
      "title": "ApiParamValue",
      "oneOf": [
        {
          "type": "object",
          "title": "ApiParamRawValue",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["raw"]
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["type", "value"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "title": "ApiParamDynamicValue",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["dynamic"]
            },
            "dynamicParamName": {
              "type": "string"
            }
          },
          "required": ["type", "dynamicParamName"],
          "additionalProperties": false
        }
      ]
    },
    "Params": {
      "title": "ApiParams",
      "type": "array",
      "items": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "required": ["name"],
            "additionalProperties": false
          },
          {
            "$ref": "#/definitions/ParamValue"
          }
        ]
      }
    }
  },
  "additionalProperties": false
}